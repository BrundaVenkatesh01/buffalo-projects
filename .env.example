# Upstash Redis for distributed rate limiting across serverless functions
# Sign up: https://console.upstash.com
#
# âš ï¸ SERVER-ONLY: These must NOT have NEXT_PUBLIC_ prefix!

UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token_here

# Rate limit configuration
RATE_LIMIT_MAX_REQUESTS=10              # Max requests per window
RATE_LIMIT_WINDOW=60000                 # Window in milliseconds (60000 = 1 minute)
RATE_LIMIT_PREFIX=bp::rl                # Redis key prefix

# Authentication & Session Security
AUTH_MIDDLEWARE_ENABLED=true            # Enable auth middleware
CSRF_PROTECTION_ENABLED=true            # Enable CSRF protection
AUTH_COOKIE_NAME=__session              # Session cookie name
SESSION_SECRET=change_this_in_production_use_long_random_string

