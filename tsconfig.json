{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true
  },
  "include": [
    "src",
    "app",
    "next-env.d.ts",
    "playwright.config.ts",
    "vitest.config.ts",
    "tailwind.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "tests",
    "node_modules",
    ".next",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "src/stories/**"
  ]
}
