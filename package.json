{
  "name": "buffalo-projects",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/verify-env.mjs && next build",
    "postbuild": "next-sitemap",
    "build:skip-verify": "next build",
    "analyze": "ANALYZE=true next build",
    "start": "next start",
    "preview": "next start",
    "//": "—— Type & Lint ——",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:build": "npm run typecheck",
    "typecheck:watch": "tsc --noEmit --watch -p tsconfig.json",
    "type-check": "npm run typecheck",
    "lint": "eslint --max-warnings=150 app src",
    "lint:fix": "eslint --fix app src",
    "lint:watch": "eslint --watch --ext .ts,.tsx,.js,.jsx,.cjs,.mjs app src",
    "//1": "—— Dead code / deps / cycles ——",
    "knip": "knip",
    "depcheck": "depcheck --skip-missing=true",
    "cycles": "madge --extensions ts,tsx src",
    "//2": "—— Tests ——",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "coverage:check": "vitest run --coverage",
    "coverage:hotspots": "node scripts/coverage-summary.mjs 80",
    "//3": "—— Style ——",
    "format": "prettier -w .",
    "style:lint": "stylelint \"src/**/*.{css,scss}\"",
    "//4": "—— Aggregates ——",
    "check": "npm run typecheck && npm run lint",
    "check:deep": "npm run typecheck && npm run lint && npm run knip && npm run cycles && npm run depcheck && npm run test",
    "//5": "—— Git hooks (lefthook) ——",
    "prepare": "lefthook install || true",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:next": "playwright test --project=chromium --grep @next",
    "emulators": "firebase emulators:start --only firestore,storage,auth --project demo-buffalo",
    "seed:emulator": "NEXT_PUBLIC_FIREBASE_EMULATOR=1 node scripts/seed-emulator.mjs",
    "//6": "—— Deployment (Vercel) ——",
    "deploy": "vercel",
    "deploy:prod": "vercel --prod",
    "deploy:preview": "vercel",
    "vercel": "vercel",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{json,md,css,scss}": [
      "prettier -w"
    ]
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@octokit/rest": "^22.0.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@storybook/react": "^8.6.0",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.34.3",
    "@vitejs/plugin-react": "^5.0.2",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.7",
    "firebase": "^12.2.1",
    "framer-motion": "^12.23.12",
    "geist": "^1.5.1",
    "gsap": "^3.13.0",
    "nanoid": "^5.1.5",
    "next": "^15.5.7",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "pdf-parse": "^2.4.5",
    "postcss-load-config": "^6.0.1",
    "posthog-js": "^1.266.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-easy-crop": "^5.5.6",
    "react-hook-form": "^7.64.0",
    "react-router-dom": "^7.9.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@next/bundle-analyzer": "^15.5.6",
    "@playwright/test": "^1.55.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@storybook/nextjs": "^8.6.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "axe-playwright": "^2.2.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.35.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jsdom": "^27.0.0",
    "knip": "^5.64.2",
    "lefthook": "^1.13.6",
    "lucide-react": "^0.544.0",
    "madge": "^8.0.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "storybook": "^8.6.0",
    "stylelint": "^16.25.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "terser": "^5.44.0",
    "typescript": "~5.8.2",
    "vercel": "^25.2.0",
    "vite": "^6.2.0",
    "vitest": "^3.2.4"
  }
}
